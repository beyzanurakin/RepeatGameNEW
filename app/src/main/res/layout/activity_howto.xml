<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/specgri"
    tools:context=".Howto">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/howtocolor"
        android:fontFamily="@font/viga"
        android:padding="10dp"
        android:text="ABOUT GAME"
        android:textColor="@color/titlecolor"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/turuncu"
            android:ems="10"
            android:fontFamily="@font/viga"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:singleLine="false"
            android:text="PRESS THE BUTTONS AS SHOWN IN EACH UPPER LEVEL HAS ONE MORE LINE ADDED HAVE FUN !!"
            android:textColor="@color/specbeyaz"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/viga"
            android:textColor="@color/specbeyaz"
            android:background="@color/contactcolor"
            android:gravity="center"
            android:padding="5dp"
            android:text="CONTACT US"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/viga"
            android:textColor="@color/specbeyaz"
            android:background="@color/contactcolor"
            android:gravity="center"
            android:padding="2dp"
            android:text="easyrepeatgame@info.com"
            android:textSize="20sp" />


    </LinearLayout>

</RelativeLayout>