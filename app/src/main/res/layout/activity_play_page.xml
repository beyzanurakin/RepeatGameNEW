<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/specgri"

    tools:context=".PlayPage">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/howtocolor"
        android:fontFamily="@font/viga"
        android:padding="10dp"
        android:text="LEVELS"
        android:textColor="@color/titlecolor"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/gotoeasy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:background="@color/specmavi"
            android:fontFamily="@font/viga"
            android:text="EASY"
            android:textColor="@color/specbeyaz"
            android:textSize="26sp" />

        <Button
            android:id="@+id/gotomedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@color/specyesil"
            android:fontFamily="@font/viga"
            android:text="MEDIUM"
            android:textColor="@color/specbeyaz"
            android:textSize="26sp" />

        <Button
            android:id="@+id/gotohard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@color/specsari"
            android:fontFamily="@font/viga"
            android:text="HARD"
            android:textColor="@color/specbeyaz"
            android:textSize="26sp" />
    </LinearLayout>
</RelativeLayout>